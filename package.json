{
  "name": "coding-coach-api",
  "version": "0.0.1",
  "description": "Application to serve Coding Coach FE",
  "main": "src/index.js",
  "repository": "https://github.com/Coding-Coach/coding-coach-api",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "nodemon src/index.js",
    "build": "rm -rf dist && babel src -d dist",
    "postbuild": "(docker rm -f $(docker ps -aq -f \"ancestor=coding-coach\") || true ) && (docker rmi $(docker images coding-coach -q) || true )&& docker build -t coding-coach .",
    "serve": "node index.js",
    "run-docker": "docker run -p 3000:80 coding-coach",
    "lint": "eslint .",
    "test": "jest"
  },
  "dependencies": {
    "@babel/polyfill": "^7.0.0",
    "@babel/runtime": "^7.0.0",
    "apollo-server": "^2.0.7",
    "apollo-server-express": "^2.0.6",
    "body-parser": "^1.18.3",
    "cors": "^2.8.4",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "graphql": "^14.0.2",
    "graphql-tools": "^3.1.1",
    "helmet": "^3.13.0",
    "lodash": "^4.17.10",
    "lusca": "^1.6.1",
    "merge-graphql-schemas": "^1.5.3",
    "mongoose": "^5.2.14",
    "morgan": "^1.9.1",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.1",
    "@babel/node": "^7.0.0",
    "@babel/plugin-transform-arrow-functions": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.0.0",
    "@babel/plugin-transform-spread": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "babel-core": "^7.0.0-bridge",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.2",
    "babel-plugin-inline-import": "^3.0.0",
    "eslint": "^5.5.0",
    "eslint-config-airbnb": "^17.1.0",
    "graphql-request": "^1.8.2",
    "jest": "^23.6.0",
    "nodemon": "^1.18.4",
    "wait-on": "^3.0.1"
  },
  "jest": {
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "./dist"
    ],
    "coverageReporters": [
      "lcov",
      "html"
    ],
    "moduleNameMapper": {
      "^mongoose$": "<rootDir>/node_modules/mongoose"
    },
    "setupTestFrameworkScriptFile": "<rootDir>/setupJest.js"
  }
}
